*
  padding 0
  margin 0
  outline none
  list-style-type none
body
  background-color #F5EEEA
  .register_top
    position relative
    height 50px
    background-color #fff
    line-height 60px
    font-size 20px
    text-align center
    color: #EA5404
    border-bottom 1px solid #D9DADF
    .prev
      position absolute
      top 0
      left 10px
      img
        width 10px
.ipt
  position relative
  padding 5px 0
  margin-top 30px
  background-color #FFF
  border-top 1px solid #D8D9DD
  border-bottom 1px solid #D8D9DD
  .select_human
    position absolute
    background-color #B2B2B2
    width 90%
    bottom  -115px
    left 5%
    text-align center
    border-radius 5px
    opacity 0
    li
      padding 2px
      color #FFF
      letter-spacing 20px
      border-bottom 1px solid #ffffff
  .ipt_txt
    position relative
    overflow hidden
    padding-top 5px
    padding-bottom 10px
    margin 0 auto
    border-bottom  1px solid #d9dadf
    .select
      img
        transform-origin(center,center)
        transform rotate(-90deg)
        width 10px
        margin-top 10px
    .get
      position absolute
      width 80px
      height 20px
      line-height 20px
      font-size 12px
      padding 3px
      text-align center
      color #fff
      border-radius 5px
      background-color #ea5404
      top 50%
      margin-top -14px
      right 10px
    .ps_txt
      margin-top 6px
    .more
      border-color transparent
    img
      margin 5px 20px
      width 20px
    .txt
      padding-left 10px
      font-size 14px
      line-height 30px
      font-weight bold
      text-align left
    input
      font-size 14px
      border 0
      padding 8px 10px
      width 150px
    .use,.passwd,.txt,input
      float left
#key
  img
    position relative
    left 10px
    width 15px
    margin-left 10px
#human
  border-color transparent
  transition all 0.2s
.button
  width 90%
  height 50px
  margin 50px auto
  border-radius 8px
  background-color #C7C7C7
  color #FFF
  font-size 20px
  text-align center
  line-height 50px
.footer
  display block
  text-align center
  margin-top -30px
  font-size 12px
  color: #7D7D7E
  a
    color #ea5404
