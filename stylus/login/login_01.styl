*
  padding 0
  margin 0
  outline none
body
  background-color #F5EEEA
  .login_top
    position relative
    height 50px
    background-color #fff
    line-height 60px
    font-size 20px
    text-align center
    color: #EA5404
    border-bottom 1px solid #D9DADF
    .prev
      position absolute
      top 0
      left 10px
      img
        width 10px
.ipt
  padding 5px 0
  margin-top 30px
  background-color #FFF
  height 100px
  border-top 1px solid #D8D9DD
  border-bottom 1px solid #D8D9DD
  .ipt_txt
    width 90%
    overflow hidden
    padding-top 5px
    padding-bottom 10px
    margin 0 auto
    border-bottom  1px solid #d9dadf
    &:nth-child(2)
      border-color transparent
    .ps_txt
      margin-top 6px
    img
      margin 5px 0
      width 20px
    .txt
      padding-left 10px
      font-size 14px
      line-height 30px
      font-weight bold
    input
      font-size 14px
      border 0
      padding 8px 10px
      width 150px
    .use,.passwd,.txt,input
      float left
.button
  width 90%
  height 50px
  margin 50px auto
  border-radius 8px
  background-color #C7C7C7
  color #FFF
  font-size 20px
  text-align center
  line-height 50px
.registered
  display block
  font-weight bold
  margin -20px 30px
  color #FF8A00
.forget
  display block
  float right
  font-weight bold
  color: #6D6D6E
  margin-right 30px