.done
  width 90%
  margin-top 6px
  margin-left 5%
  border-radius 5px
  height 50px
  background-color #B2B2B2
  font-size 20px
  text-align center
  line-height 50px
  color #FFF
.registerDone
  position fixed
  top 50%
  margin-top -75px
  left 50%
  margin-left -125px
  width 250px
  height 150px
  background-color #ffffff
  border-radius 8px
  display none
  .tip
    text-align center
    height 80px
    line-height 80px
    font-weight bold
    border-bottom 1px solid #d9dadf
  .ok
    text-align center
    height 60px
    line-height 70px
    font-size 20px
    color: #ea5404