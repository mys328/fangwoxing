  padding 0
  margin 0
body
  background-color #EFEFF4
.register_top
  position relative
  height 50px
  background-color #fff
  line-height 60px
  font-size 20px
  text-align center
  color: #EA5404
  border-bottom 1px solid #D9DADF
  .prev
    position absolute
    top 0
    left 10px
    img
      width 10px
p
  padding 12px 20px
  color #B6B6B6
.must
  padding 10px
  background-color #FFF
  .photo01
    width 80px
    height 80px
    margin 0 auto
    border-radius 50%
    background-color #878787
    text-align center
    line-height 80px
    color #FFF
  .photo02
    width 120px
    height 80px
    margin 10px auto
    border-radius 5px
