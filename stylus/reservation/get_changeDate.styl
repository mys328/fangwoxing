@import "../common/body.styl"
@import "../common/title.styl"
.title
  .prev
    font-size 14px
  .next
    position absolute
    font-size 14px
    width 40px
    height 20px
    line-height 20px
    right 5px
    bottom 10px
    color #ea5404
p.txt
  font-size 14px
  color #B7B7B8
  padding 8px
.items_01
  display flex
  width 100%
  background-color #FFF
  border-bottom 1px solid #E3E3E8
  height 50px
  .user
    flex 1
    background url("../../../public/img/reservationXq/content_img_user@2x.png") no-repeat center
    background-size 40px
  .user_txt
    flex 5
    p
      &:nth-child(1)
        font-size 14px
        color #3E3E3E
        margin 10px 4px
      &:nth-child(2)
        font-size 12px
        color #7B7B7B
        margin -8px 4px
  .tel
    position relative
    flex 1
    background url("../../../public/img/reservationXq/content_icon_call@2x.png") no-repeat center
    background-size 24px
    .border
      position absolute
      width 1px
      height 30px
      background-color #F0F0F0
      left 0
      top 50%
      margin-top -15px
.items_02
  width 100%
  background-color #FFF
  border-bottom 1px solid #E3E3E8
  height 64px
  p
    display block
    padding 8px 10px
    font-size 14px
    color #3E3E3E
  .txt_all
    margin-top -10px
    .txt
      display inline-block
      width 40%
      font-size 12px
      margin-left 10px
      color #7b7b7b
.items_03
  width 100%
  background-color #FFF
  border-bottom 1px solid #E3E3E8
  height 45px
  span
    font-size 16px
    line-height 46px
    padding 10px
.items_04
  position relative
  display flex
  width 100%
  background-color #FFF
  height 43px
  .left
    flex 1
    span
      text-align center
      font-size 16px
      display block
      &:nth-child(1)
        margin-top 4px
      &:nth-child(2)
        font-size 12px
  .right
    flex 6
    text-align right
    span
      font-size 14px
      line-height 44px
      padding 10px
  .border
    position absolute
    width 96%
    height 1px
    background-color #E3E3E8
    bottom 0
    right 0
.items_05
  width 100%
  background-color #FFF
  height 43px
  input
    display block
    float right
    width 100%
    margin-top 4px
    text-align right
    padding-right 20px
    height 30px
    color #E3E3E8
    border 0
    outline none
.mark
  position fixed
  width 100%
  height 100%
  top 0
  background-color #000
  opacity 0.2
  display none
.alert_03
.alert_02
  position fixed
  background-color #FFF
  width 70%
  height 110px
  border-radius 8px
  top 50%
  margin-left 15%
  margin-top -55px
  display none
  .top
    height 64px
    text-align center
    line-height 64px
    font-size 12px
    color #424242
    border-bottom 1px solid #EBEBEE
  .bottom
    height 40px
    line-height 40px
    text-align center
    font-size 20px
    color #ea5404
.alert_01
  position fixed
  background-color #FFF
  width 70%
  height 110px
  border-radius 8px
  top 50%
  margin-left 15%
  margin-top -55px
  display none
  .top
    height 64px
    text-align center
    line-height 64px
    font-size 12px
    color #424242
    border-bottom 1px solid #EBEBEE
  .bottom
    display flex
    height 40px
    .cancel
      flex 1
      font-size 20px
      text-align center
      line-height 40px
      color #646464
      border-right 1px solid #EBEBEE
    .ok
      flex 1
      font-size 20px
      text-align center
      line-height 40px
      color #ea5404
